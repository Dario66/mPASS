<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar"
           parent="@android:style/Widget.Holo.Light.ActionBar">
         <item name="android:background">#2aa4cd</item>
        <item name="android:titleTextStyle">@style/Theme.MyAppTheme.ActionBar.TitleTextStyle</item>
    </style>
    
    <style name="Theme.MyAppTheme.ActionBar.TitleTextStyle" 
        parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
    	<item name="android:textColor">#FFFFFF</item>
    </style>  
    
    <style name="InfoDialogGreen" parent="@android:style/Theme.Dialog">
        <item name="android:windowTitleStyle">@style/dialog_title_style_green</item>
        <item name="android:background">#FFFFFF</item>
    </style>
    
    <style name="dialog_title_style_green" parent="android:Widget.TextView">
	    <item name="android:background">#66cc00</item>
	    <item name="android:textColor">#FFFFFF</item>
	    <item name="android:textSize">20sp</item>
	</style>
	
    <style name="InfoDialogYellow" parent="@android:style/Theme.Dialog">
        <item name="android:windowTitleStyle">@style/dialog_title_style_yellow</item>
        <item name="android:background">#FFFFFF</item>
    </style>
    
    <style name="dialog_title_style_yellow" parent="android:Widget.TextView">
	    <item name="android:background">#fbec5d</item>
	    <item name="android:textColor">#FFFFFF</item>
	    <item name="android:textSize">20sp</item>
	</style>
	
    <style name="InfoDialogRed" parent="@android:style/Theme.Dialog">
        <item name="android:windowTitleStyle">@style/dialog_title_style_red</item>
        <item name="android:background">#FFFFFF</item>
    </style>
    
    <style name="dialog_title_style_red" parent="android:Widget.TextView">
	    <item name="android:background">#e32636</item>
	    <item name="android:textColor">#FFFFFF</item>
	    <item name="android:textSize">20sp</item>
	</style>
	
    <style name="InfoDialogGray" parent="@android:style/Theme.Dialog">
        <item name="android:windowTitleStyle">@style/dialog_title_style_gray</item>
        <item name="android:background">#FFFFFF</item>
    </style>
    
    <style name="dialog_title_style_gray" parent="android:Widget.TextView">
	    <item name="android:background">#848482</item>
	    <item name="android:textColor">#FFFFFF</item>
	    <item name="android:textSize">20sp</item>
	</style>
    
    <style name="customButton" parent="@android:style/Widget.Button">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/button_selector</item>
    </style>
</resources>
